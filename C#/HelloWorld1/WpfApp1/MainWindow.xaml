<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Enter a Name" HorizontalAlignment="Left" Margin="121,60,0,0" VerticalAlignment="Top" Height="53" Width="92"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="240,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button Content="Click Me!" HorizontalAlignment="Left" Margin="400,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,0.645" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="99" Margin="134,118,0,0" TextWrapping="Wrap" Text="Hello World! I am clickable" VerticalAlignment="Top" Width="332" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>

    </Grid>
</Window>
